<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/sensor_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12.0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/sensor_image_card"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginRight="12.0dp"
                    card_view:cardCornerRadius="2.0dp"
                    card_view:cardElevation="0.0dp">

                    <ImageView
                        android:id="@+id/sensor_image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/sensor_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sensor_image_card"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/sensor_image_card"
                    android:singleLine="true"
                    android:textColor="@color/seventy_percent_black"
                    android:textSize="18sp"
                    />

                <View
                    android:id="@+id/sensor_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/sensor_id"
                    android:layout_marginBottom="8.0dp"
                    android:layout_marginTop="8.0dp"
                    android:layout_toRightOf="@id/sensor_image_card"
                    android:background="@color/ten_percent_black"/>

                <LinearLayout
                    android:layout_below="@id/sensor_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/sensor_image_card"
                    android:orientation="horizontal">
                    
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_pin"/>

                    <TextView
                        android:id="@+id/sensor_coordantes"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/forty_percent_black"
                        android:textSize="15sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/sensor_image_card"
                    android:layout_toRightOf="@id/sensor_image_card"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_status"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_status"/>

                    <TextView
                        android:id="@+id/sensor_status"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/forty_percent_black"
                        android:textSize="15sp"
                        />

                </LinearLayout>
            </RelativeLayout>
            
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
